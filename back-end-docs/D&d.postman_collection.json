              "mode": "raw",
              "raw": "{\n  \"email\": \"DM@example.com\",\n  \"password\": \"DM\"\n}"
            },
            "url": "http://localhost:8080/api/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) {",
                  "    pm.environment.set(\"jwtToken\", json.token);",
                  "} else {",
                  "    pm.environment.unset(\"jwtToken\");",
                  "}"
                ]
              }
            }
          ]
        },
